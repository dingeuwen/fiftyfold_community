<div class="container_12">

  <div class="grid_8 push_2">
    <div class="feature_icon">
      <%= image_tag ("pub_profile_bubble.svg") %>
    </div>
    <p class="pg_title"> edit profile </p>
    <div class="rule"></div>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="grid_3">
        <%= image_tag @user.image_url(:thumb).to_s %>
        <p>
          Choose image to upload
          <%= f.file_field :image %>
        </p>
        <p>
          Or use an image online. Put url below.
          <%= f.text_field :remote_image_url %>
        </p>
      </div>
      <div class="grid_5" style="margin-left:20px">
        <div>
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, :class => "form_field" %>
        </div>
        <div>
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, :class => "form_field" %>
        </div>
        <div>
          <%= f.label :email %><br />
          <%= f.email_field :email, :class => "form_field" %>
        </div>
      </div>
      <div class="grid_8">
        <div>
          <%= f.label "One-liner bio (160 character limit)" %><br />
          <%= f.text_area :bio, :cols => "30", :rows => "10", :class => "bio_field", :placeholder => "Tell us about yourself! (briefly. This will be displayed in your tile on the home page)" %>
        </div>
        <div>
          <%= f.label "My entrepreneurial status" %><br />
          <%= f.text_area :status, :cols => "30", :rows => "10", :class => "bio_field", :placeholder => "eg. looking for a technical cofounder, looking for a team, have a startup, getting over a failed startup etc." %>
        </div>
        <div>
          <%= f.label "Background (feel free to add links to portfolios or projects/companies/stuff you have done)" %><br />
          <%= f.text_area :background, :cols => "30", :rows => "10", :class => "big_text_field", :placeholder => "Now go into more detail! Whatever you feel is relevant!" %>
        </div>
        <div>
          <%= f.label "Skills (seperate each with comma)" %><br />
          <%= f.text_area :skill_list, :cols => "30", :rows => "10", :class => "big_text_field" %>
        </div>
        <div>
          <%= f.label "Employment History" %><br />
          <%= f.text_area :employment_history, :cols => "30", :rows => "10", :class => "big_text_field" %>
        </div>
        <div>
          <%= f.label "Entrepreneurship Goals" %><br />
          <%= f.text_area :entrepreneurship_goals, :cols => "30", :rows => "10", :class => "big_text_field", :placeholder => "What do you hope to achieve with respect to entrepreneurship during your time at HBS?" %>
        </div>
        <div>
          <%= f.label "Interest: Role (eg. Marketing, product, design, biz dev, just exploring)" %><br />
          <%= f.text_area :role_interest_list, :cols => "30", :rows => "10", :class => "bio_field", :placeholder => "Seperate with commas if multiple" %>
        </div>
        <div>
          <%= f.label "Interest: Industry (eg. Education, med device, consumer products, web, mobile, etc)" %><br />
          <%= f.text_area :industry_interest_list, :cols => "30", :rows => "10", :class => "bio_field", :placeholder => "Seperate with commas if multiple" %>
        </div>
        <div>
          <%= f.label "Country of origin, experience, and/or interest" %><br />
          <%= f.text_area :country_list, :cols => "30", :rows => "10", :class => "form_field", :placeholder => "Seperate with commas if multiple" %>
        </div>
        <div>
          <%= f.label "Undergraduate College" %><br />
          <%= f.text_area :undergrad_list, :cols => "30", :rows => "10", :class => "form_field" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div>
          <%= f.label :password %> <i>(Leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, :autocomplete => "off", :class => "form_field" %>
        </div>
        <div>
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, :class => "form_field" %>
        </div>
        <div>
          <%= f.label :current_password %> <i>(To confirm your changes)</i><br />
          <%= f.password_field :current_password, :class => "form_field" %>
        </div>
        <div class="submit_btn">
          <%= f.submit "update" %>
        </div>
        <div class="rule"></div>
      </div>
    <% end %>
  </div>
  <%#= link_to "Back", :back %>
</div>
